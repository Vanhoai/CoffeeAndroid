        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="24dp"
            android:backgroundTint="@color/textColor"
            android:src="@drawable/back_icon" />

