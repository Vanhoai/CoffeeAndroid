<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="1dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    android:id="@+id/cardViewAllShop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="12dp"
            android:layout_marginRight="12dp">

            <ImageView
                android:id="@+id/imageAllShop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNameShop"
                style="@style/textMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aurora Coffee - Street View "
                android:textColor="@color/darkColor"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvDescriptionShop"
                style="@style/textMedium"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum has been the industry standard dummy text ever since ..."
                android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/tvPlaceLocation"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tân Bình Ditrict"
                    style="@style/textMedium"
                    android:textSize="12dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>