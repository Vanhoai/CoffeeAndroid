<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardPromo"
    android:layout_marginBottom="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background_input"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imagePromo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/reward_type_1"
            android:layout_marginRight="12dp" />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvNamePromo"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free a coffee"
                    style="@style/textMedium"
                    android:textColor="@color/darkColor"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tvCount"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8/10"
                    style="@style/textMedium"
                    android:textColor="@color/darkColor"
                    android:textSize="18dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvDescription"
                style="@style/textMedium"
                android:textColor="@color/textColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free a any coffee at Aurora Shop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/time"
                    android:layout_marginRight="8dp"/>

                <TextView
                    android:id="@+id/tvExpired"
                    android:layout_weight="1"
                    android:textColor="@color/redColor"
                    android:text="Ends in 12 hours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>