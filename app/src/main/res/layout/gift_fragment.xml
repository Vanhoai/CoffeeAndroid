<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                style="@style/textMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="600"
                android:text="Attractive gift for you"
                android:textColor="@color/darkColor"
                android:textSize="24dp" />

            <TextView
                style="@style/textMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carry out the mission and enjoy the rewards"
                android:textColor="@color/textColor"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearExp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/background_input"
            android:orientation="horizontal"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/linearTitle">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/gift_reward" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/textMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="350 XP more to get rewards"
                    android:textColor="@color/darkColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom_line">

                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_line"
                        android:backgroundTint="@color/secondaryColor" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linearExp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:background="@drawable/background_input"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/textMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:textColor="@color/darkColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/textMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vouchers"
                    android:textColor="@color/darkColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginVertical="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom_line">

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_line"
                        android:backgroundTint="@color/secondaryColor" />

                </RelativeLayout>

                <TextView
                    style="@style/textMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5 will expire" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:background="@drawable/background_input"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/textMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="17"
                    android:textColor="@color/darkColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/textMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Missions"
                    android:textColor="@color/darkColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginVertical="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom_line">

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_line"
                        android:backgroundTint="@color/secondaryColor" />

                </RelativeLayout>

                <TextView
                    style="@style/textMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3 in progress" />

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="18dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/textWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="Voucher for you"
                        android:textColor="@color/darkColor"
                        android:textSize="20dp" />

                    <TextView
                        style="@style/textWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="14dp"
                        android:gravity="center_vertical"
                        android:text="View All"
                        android:textColor="@color/primaryColor"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/background_input"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="12dp"
                            android:src="@drawable/promo1" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/textMedium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Free a coffee"
                                android:textColor="@color/darkColor"
                                android:textSize="16dp" />

                            <TextView
                                style="@style/textWeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="8/10"
                                android:textSize="14dp" />

                            <TextView
                                style="@style/textMedium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="Buy 10 Coffees and get 1 Coffee for free"
                                android:textColor="@color/textColor"
                                android:textSize="14dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="50dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/time" />

                                <TextView
                                    style="@style/textMedium"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:text="Ends in 12 hours"
                                    android:textColor="@color/redColor"
                                    android:textSize="12dp" />
                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/textWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="Mission for you"
                        android:textColor="@color/darkColor"
                        android:textSize="18dp" />

                    <TextView
                        style="@style/textWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="14dp"
                        android:gravity="center_vertical"
                        android:text="View All"
                        android:textColor="@color/primaryColor"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclePromo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>