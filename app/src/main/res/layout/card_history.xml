<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="1dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    android:id="@+id/cardHistory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="50dp"
            android:layout_marginRight="12dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/image_history" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNameHistory"
                    style="@style/textWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Aurora Coffee"
                    android:textColor="@color/darkColor"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvStatus"
                    style="@style/textMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Đã thanh toán"
                    android:textColor="@color/darkColor"
                    android:textSize="16dp" />

            </RelativeLayout>

            <TextView
                android:layout_marginVertical="4dp"
                android:id="@+id/tvDescriptionHisstory"
                style="@style/textMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Congratulation,you have successfully made a coffee purchase"
                android:textColor="@color/textColor"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvDateHistory"
                style="@style/textMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22 August 2022, 10:00 AM"
                android:textColor="@color/textColor"
                android:textSize="16dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancel"
                android:layout_marginTop="4dp"
                android:layout_alignParentEnd="true"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Hủy đơn"
                android:textSize="14dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/background_button"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>