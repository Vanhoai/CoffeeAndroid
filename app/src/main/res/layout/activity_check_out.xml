<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relativecheckOut"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_icon"
            android:backgroundTint="#5F5F5F" />

        <TextView
            android:text="Check Out"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:textSize="16dp"
            style="@style/textWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <ScrollView
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/relativecheckOut"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="24dp"
                android:text="Shipping Address"
                android:textSize="18dp"
                android:textColor="#000000"
                style="@style/textWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_marginTop="12dp"
                android:background="@drawable/background_input"
                android:paddingHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <ImageView
                    android:src="@drawable/image_location"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="44dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="13dp"
                            android:layout_marginBottom="4dp"
                            android:text="Home"
                            style="@style/textWeight"
                            android:textColor="#000000"
                            android:textSize="18dp" />

                        <androidx.appcompat.widget.AppCompatButton
                            app:backgroundTint="@null"
                            android:text="Default"
                            android:layout_marginHorizontal="12dp"
                            android:background="@drawable/background_button"
                            android:layout_width="80dp"
                            android:layout_height="18dp"
                            android:textColor="#FFFFFF"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="44dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TTH20, 12 Ditrict, HCM city"
                            style="@style/textWeight"
                            android:textColor="#000000"
                            android:textSize="18dp" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/edit_icon"
                    android:layout_marginRight="4dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:text="Product List"
                style="@style/textWeight"
                android:textSize="18dp"
                android:textColor="#000000"/>

            <RelativeLayout
                android:layout_marginTop="12dp"
                android:background="@drawable/background_input"
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="108dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="#BEBEC1"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="28dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="28dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Vanilla Sweet"
                            android:textColor="#076B5B"
                            style="@style/textWeight"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="25.000 VND"
                            style="@style/textWeight"
                            android:textColor="#5F5F5F"
                            android:textSize="14dp" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    app:backgroundTint="@null"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="#0DB165"
                    android:text="1"
                    android:layout_marginRight="4dp"
                    android:textColor="#FFFFFF"
                    android:layout_width="40dp"
                    android:layout_height="44dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="14dp"
                android:background="@drawable/background_input"
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="108dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="#BEBEC1"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="28dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="28dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Vanilla Sweet"
                            style="@style/textWeight"
                            android:textColor="#076B5B"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="25.000 VND"
                            style="@style/textWeight"
                            android:textColor="#5F5F5F"
                            android:textSize="14dp" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    app:backgroundTint="@null"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="#0DB165"
                    android:text="1"
                    android:layout_marginRight="4dp"
                    android:textColor="#FFFFFF"
                    android:layout_width="40dp"
                    android:layout_height="44dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="14dp"
                android:background="@drawable/background_input"
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="108dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="#BEBEC1"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="28dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="28dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Vanilla Sweet"
                            style="@style/textWeight"
                            android:textColor="#076B5B"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="25.000 VND"
                            style="@style/textWeight"
                            android:textColor="@color/textColor"
                            android:textSize="14dp" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    app:backgroundTint="@null"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="#0DB165"
                    android:text="1"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/white"
                    android:layout_width="40dp"
                    android:layout_height="44dp"/>

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="28dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose a delivery method"
                    style="@style/textWeight"
                    android:textSize="20dp"
                    android:textColor="#000000"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <androidx.appcompat.widget.AppCompatButton
                        app:backgroundTint="@null"
                        android:text="Pick up"
                        android:background="@drawable/background_button"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginRight="12dp"
                        android:textColor="@color/white"/>

                    <androidx.appcompat.widget.AppCompatButton
                        app:backgroundTint="@null"
                        android:text="Ship"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/background_button"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textColor="@color/white"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Promo Code"
                style="@style/textWeight"
                android:textSize="18dp"
                android:textColor="#000000"/>

            <RelativeLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/background_input">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:layout_marginStart="20dp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp"
                        android:text="mKTkApl"
                        style="@style/textWeight"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:textColor="#000000"/>

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:src="@drawable/arrow_bottom"
                        android:layout_marginRight="20dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="216dp"
                android:background="@drawable/background_input">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount"
                            style="@style/textWeight"
                            android:textColor="@color/textColor"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="190dp"
                            android:layout_marginTop="20dp"
                            android:text="100.000"
                            style="@style/textWeight"
                            android:textColor="@color/textColor"
                            android:textSize="16dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Promo"
                            style="@style/textWeight"
                            android:textColor="@color/textColor"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="250dp"
                            android:layout_marginTop="20dp"
                            android:text="-"
                            style="@style/textWeight"
                            android:textColor="@color/textColor"
                            android:textSize="16dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ship"
                            style="@style/textWeight"
                            android:textColor="@color/textColor"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="268dp"
                            android:layout_marginTop="20dp"
                            android:text="-"
                            style="@style/textWeight"
                            android:textColor="@color/textColor"
                            android:textSize="16dp" />

                    </LinearLayout>

                    <ImageView
                        android:src="@drawable/line"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginTop="24dp"
                            android:layout_weight="1"
                            android:textColor="@color/textColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            style="@style/textWeight"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="215dp"
                            android:layout_marginTop="20dp"
                            android:text="100.000"
                            style="@style/textWeight"
                            android:textColor="@color/textColor"
                            android:textSize="16dp" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <Button
                app:backgroundTint="@null"
                android:text="Continue Payment"
                android:layout_marginTop="80dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/background_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>