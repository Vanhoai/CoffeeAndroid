<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/Linear_voucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:src="@drawable/back_icon" />

        <TextView
            android:text="Voucher"
            android:layout_width="wrap_content"
            style="@style/textBold"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:layout_weight="1"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Linear_voucher_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Linear_voucher"
        android:layout_marginTop="28dp"
        android:orientation="vertical">

        <TextView
            android:text="25% discount for all menus"
            android:paddingHorizontal="20dp"
            android:textSize="20dp"
            style="@style/textWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:src="@drawable/time"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <TextView
                android:text="25% discount for all menus"
                android:textSize="16dp"
                style="@style/textMedium"
                android:textColor="@color/redColor"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/ivVoucher"
        android:src="@drawable/line_voucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Linear_voucher_title"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/ivVoucher"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvConditionVoucher"
            android:text="Terms and Conditions"
            android:textSize="20dp"
            style="@style/textBold"
            android:paddingHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
            <TextView
                android:text="1.Vouchers are only valid in Indonesia"
                android:textSize="16dp"
                style="@style/textMedium"
                android:paddingHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="2.Vouchers can only be used once"
                android:textSize="16dp"
                style="@style/textMedium"
                android:paddingHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="3.Vouchers acn only be valid using the
                Coffee Pay payment method"
                android:textSize="16dp"
                style="@style/textMedium"
                android:paddingHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="4.Vouchers can only be used from 07.00
                am to 09.00pm"
                android:textSize="16dp"
                style="@style/textMedium"
                android:paddingHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/background_button"
        android:text="Next"
        style="@style/textWeight"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>