<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearTitle"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/textMedium"
            android:textSize="24dp"
            android:layout_weight="600"
            android:textColor="@color/darkColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attractive gift for you"/>

        <TextView
            style="@style/textMedium"
            android:textColor="@color/textColor"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carry out the mission and enjoy the rewards"/>

    </LinearLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearExp"
                app:layout_constraintTop_toBottomOf="@id/linearTitle"
                android:background="@drawable/background_input"
                android:padding="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="78dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/gift_reward"
                    android:layout_marginRight="12dp"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textMedium"
                        android:textSize="16dp"
                        android:textColor="@color/darkColor"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="350 XP more to get rewards"/>

                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:background="@drawable/custom_line">

                        <RelativeLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_line"
                            android:backgroundTint="@color/secondaryColor"/>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/linearExp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_input"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        style="@style/textMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="11"
                        android:textColor="@color/darkColor"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/textMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vouchers"
                        android:textColor="@color/darkColor"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginVertical="16dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/custom_line">

                        <RelativeLayout
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_line"
                            android:backgroundTint="@color/secondaryColor" />
                    </RelativeLayout>

                    <TextView
                        style="@style/textMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5 will expire" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_input"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        style="@style/textMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="17"
                        android:textColor="@color/darkColor"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/textMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Missions"
                        android:textColor="@color/darkColor"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginVertical="16dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/custom_line">

                        <RelativeLayout
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_line"
                            android:backgroundTint="@color/secondaryColor" />
                    </RelativeLayout>

                    <TextView
                        style="@style/textMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3 in progress" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="38dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/textWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Voucher for you"
                    android:textColor="@color/darkColor"
                    android:textSize="20dp" />

                <TextView
                    style="@style/textWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="View All"
                    android:textColor="#3EBF84"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="18dp"
                android:padding="15dp"
                android:background="@drawable/background_input"
                android:layout_width="match_parent"
                android:layout_height="110dp">

                <ImageView
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/reward_type_1"
                    android:layout_width="56dp"
                    android:layout_height="56dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25% discount for all menus"
                        style="@style/textWeight"
                        android:textColor="@color/darkColor"
                        android:textSize="16dp"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:text="25% discount for all menus during..."
                        android:textSize="12dp"
                        android:textColor="@color/textColor"
                        android:layout_marginTop="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/time"
                            android:layout_width="14dp"
                            android:layout_height="14dp"/>

                        <TextView
                            android:layout_marginLeft="11dp"
                            android:text="Ends in 1 days"
                            android:textColor="@color/redColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="33dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/textWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mission for you"
                    android:textColor="@color/darkColor"
                    android:textSize="20dp" />

                <TextView
                    style="@style/textWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="View All"
                    android:textColor="#3EBF84"
                    android:textSize="14dp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerMission"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginTop="18dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>